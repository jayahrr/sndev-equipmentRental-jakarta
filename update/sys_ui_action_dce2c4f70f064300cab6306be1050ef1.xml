var equipment = current.u_equipment.sys_id;

// Set the Actual pick up date to the current date and update
current.u_actual_start = now;
current.update();

// In the CI Computer table, update the equipment's record to
// show it's checked out and at what time, and it's assigned
var gr = new GlideRecord('cmdb_ci_computer');
	gr.get(equipment);
	gr.x_68580_equipmentr_ischeckedout = true;
	gr.checked_out = new GlideDateTime();
	gr.checked_in = '';
	gr.assigned_to = current.u_renter;
	gr.update();

